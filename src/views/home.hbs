<ul class="cards">
    {{#each song}}
    <li>
        <a href="/song/{{this.author}}" class="card">
            <img src="{{this.url}}" class="card__image" alt="" />
            <div class="card__overlay">
                <div class="card__header">
                <svg class="card__arc" xmlns="http://www.w3.org/2000/svg"><path /></svg>                     
                <img class="card__thumb" src="{{this.url}}" alt="" />
                <div class="card__header-text">
                    <h3 class="card__title">{{this.name}}</h3>            
                    <span class="card__status">{{this.author}}</span>
                </div>
                </div>
                <p class="card__description">{{this.name}}</p>
            </div>
        </a>      
  </li>
    {{/each}}
 
</ul>